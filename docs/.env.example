# Frappe Configuration
FRAPPE_URL=http://your-frappe-instance.com
FRAPPE_API_KEY=your_frappe_api_key
FRAPPE_API_SECRET=your_frappe_api_secret

# Supabase Configuration
SUPABASE_URL=https://your-supabase-instance.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5
CONFLICT_RESOLUTION_STRATEGY=last_modified_wins

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key
FRAPPE_WEBHOOK_TOKEN=your_frappe_webhook_token

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/sync_db

# Schema Discovery Configuration
ENABLE_SCHEMA_DISCOVERY=true
DISCOVERY_MODE=auto
SCHEMA_CACHE_TTL=3600

# Frappe Schema Discovery
FRAPPE_DISCOVERY_DOCTYPES=Employee,Customer,Item,Lead,Opportunity,User,Company,Branch,Department,Designation,Employee Group,Employee Category,Shift Type,Holiday List,Leave Type,Leave Allocation,Attendance,Salary Slip,Payroll Entry,Expense Claim,Travel Request,Leave Application,Job Applicant,Job Opening,Job Offer,Appraisal,Training Program,Training Event,Training Result,Appraisal Template,Goal,KRA,Appraisal Cycle,Appraisal,360 Feedback,Employee Advance,Employee Loan,Loan Type,Loan Application,Loan Disbursement,Loan Repayment,Asset,Asset Category,Asset Movement,Asset Repair,Asset Depreciation,Asset Value Adjustment,Asset Maintenance,Asset Maintenance Log,Asset Maintenance Task,Asset Maintenance Schedule,Asset Maintenance Team,Asset Maintenance Team Member,Asset Maintenance Team Member Log,Asset Maintenance Team Member Task,Asset Maintenance Team Member Schedule,Asset Maintenance Team Member Log,Asset Maintenance Team Member Task,Asset Maintenance Team Member Schedule
FRAPPE_DISCOVERY_FIELDS=name,creation,modified,owner,modified_by
FRAPPE_DISCOVERY_SKIP_FIELDS=__islocal,__unsaved,__user_tags,__comments

# Supabase Schema Discovery
SUPABASE_DISCOVERY_TABLES=employees,customers,items,leads,opportunities,users,companies,branches,departments,designations,employee_groups,employee_categories,shift_types,holiday_lists,leave_types,leave_allocations,attendances,salary_slips,payroll_entries,expense_claims,travel_requests,leave_applications,job_applicants,job_openings,job_offers,appraisals,training_programs,training_events,training_results,appraisal_templates,goals,kras,appraisal_cycles,appraisal_360_feedbacks,employee_advances,employee_loans,loan_types,loan_applications,loan_disbursements,loan_repayments,assets,asset_categories,asset_movements,asset_repairs,asset_depreciations,asset_value_adjustments,asset_maintenances,asset_maintenance_logs,asset_maintenance_tasks,asset_maintenance_schedules,asset_maintenance_teams,asset_maintenance_team_members,asset_maintenance_team_member_logs,asset_maintenance_team_member_tasks,asset_maintenance_team_member_schedules
SUPABASE_DISCOVERY_SKIP_TABLES=pg_,information_schema,pg_catalog
SUPABASE_DISCOVERY_SKIP_FIELDS=created_at,updated_at,id

# Field Mapping Intelligence
ENABLE_SMART_MAPPING=true
FIELD_SIMILARITY_THRESHOLD=0.7
ENABLE_FIELD_TYPE_MAPPING=true
ENABLE_SEMANTIC_MAPPING=true

# Data Type Mapping Configuration
FRAPPE_TO_SUPABASE_TYPE_MAP={"Data": "text", "Int": "integer", "Float": "numeric", "Check": "boolean", "Date": "date", "Datetime": "timestamp", "Time": "time", "Text": "text", "Small Text": "text", "Long Text": "text", "Code": "text", "Link": "text", "Dynamic Link": "text", "Select": "text", "Read Only": "text", "Password": "text", "Attach": "text", "Attach Image": "text", "Signature": "text", "Color": "text", "Barcode": "text", "Geolocation": "text", "Duration": "integer", "Currency": "numeric", "Percent": "numeric"}

# Sync Rules Configuration
DEFAULT_SYNC_DIRECTION=bidirectional
ENABLE_CASCADE_SYNC=true
CASCADE_SYNC_DEPTH=2
ENABLE_CONDITIONAL_SYNC=true

# Advanced Configuration
ENABLE_SCHEMA_VALIDATION=true
ENABLE_DATA_VALIDATION=true
ENABLE_PERFORMANCE_OPTIMIZATION=true
MAX_CONCURRENT_SYNCS=10
SYNC_TIMEOUT=300
